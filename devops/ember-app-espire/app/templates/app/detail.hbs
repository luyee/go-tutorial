<div class="four wide column" style="padding-left:0" >
    <div class="ui blue segment">
        <h4 class="ui center aligned header">
            基本信息
        </h4>  
        <table class="ui table" style="border:0"  >
            <tbody>
                <tr>
                    <th class="center aligned four wide" >应用名称</th>
                    <td>{{model.app.name}}</td>
                </tr>
                <tr>
                    <th class="center aligned" >功能描述</th>
                    <td>{{model.app.desc}}</td>
                </tr>
                <tr>
                    <th class="center aligned" >仓库地址</th>
                    <td>
                        <a href="{{model.app.repository_url}}" alt="{{model.app.repository_url}}" >repository</a>
                    </td>
                </tr>
                <tr>
                    <th class="center aligned" >部署目录</th>
                    <td>{{model.app.deploy_dir}}</td>
                </tr>
                <tr>
                    <th class="center aligned" >监控地址</th>
                    <td>{{model.app.monitor_url}}</td>
                </tr>
                <tr>
                    <th class="center aligned" >status</th>
                    <td class="positive">Ok</td>
                </tr>
                <tr>
                    <th class="center aligned" >创建时间</th>
                    <td>{{model.app.created_at}}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="ui green segment">
        <h4 class="ui center aligned header">
            应用状态
        </h4>
        <table class="ui table" style="border:0" >
            <thead>
                <tr>
                    <th >主机</th>
                    <th>status</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                {{#each model.computer as |rd|}}
                <tr>
                    <td>{{rd.private_ip}}</td>
                    <td class="positive" >online</td>
                    <td>
                        {{#ui-button class="tiny small basic green" }}上线{{/ui-button}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
<div class="twelve wide column" >
    <div class="ui secondary orange menu">
        {{#link-to "app.detail.tags" model class="item" }}tags{{/link-to}}
    </div>
    {{outlet}}
</div>